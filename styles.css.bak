h1 {
	color:red;
	
}
body {
	font-family: Orelo, sans-serif;
	margin: 0;
	padding: 0;
	background-color: #78b5a6;
	color: #333
}
header	{
	background-color: #ffcc00;
	text-align: center;
	padding: 20px;
}

h1 {
	margin: 0;
	color: #333;
	font-size: 2.5em;
}

main {
	padding: 20px;
}

.wiersz {
	font-size: italic;
	line-height: 1.8;
	background-color: #fef5e7;
	border-left: 5px solid #ffcc00;
	padding: 10px 20px;
	margin: 20px 0;
	border-radius: 5px;
	color: #555;
	
}

table {
	width: 100%;
	border-collapse: collapse;
	margin: 20px 0;
	background-color: #e1eabb;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
table th, table td {
	border: 1px solid #ccc;
	padding: 10px;
	text-align: left;
}

table th {
	background-color: #ffcc00;
	color: #333;
}
footer {
	background-color:  #d5d592;
	color: #fff;
	text-align: center;
	padding: 10px 0;
	font-size: 0.9em;
}
footer a {
	color: #e1eabb;
	text-decoration: none;
}

footer a:hover {
	text-decoration: underline;
}